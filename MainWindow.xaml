<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Otvet"
        Height="650" Width="580"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- FORMULA 1 -->
                <RadioButton IsChecked="True" Margin="5" Name="Radio1">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="formula1.png"
                               Height="40" Margin="5"/>
                        <GroupBox Header="Параметры">
                            <WrapPanel HorizontalAlignment="Center" Margin="10,5">
                                <Label Content="a:" VerticalAlignment="Center"/>
                                <TextBox Text="0.00" Name="R1TextA" MinWidth="70" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="f:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <ComboBox Name="R1ComboF" SelectedIndex="0" MinWidth="70">
                                    <ComboBoxItem>4</ComboBoxItem>
                                    <ComboBoxItem>5</ComboBoxItem>
                                    <ComboBoxItem>6</ComboBoxItem>
                                    <ComboBoxItem>7</ComboBoxItem>
                                </ComboBox>
                            </WrapPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <!-- FORMULA 2 -->
                <RadioButton Margin="5" Name="Radio2">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Height="40" Source="/formula2.png" Margin="5"/>
                        <GroupBox Header="Параметры">
                            <WrapPanel HorizontalAlignment="Center" Margin="10,5">
                                <Label Content="a:" VerticalAlignment="Center"/>
                                <TextBox Text="0.00" MinWidth="70" Name="R2TextA" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="b:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox Text="0.00" MinWidth="70" Name="R2TextB" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="f:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <ComboBox MinWidth="100" Name="R2ComboF">
                                    <ComboBoxItem>10</ComboBoxItem>
                                    <ComboBoxItem>20</ComboBoxItem>
                                    <ComboBoxItem>30</ComboBoxItem>
                                </ComboBox>
                            </WrapPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <!-- FORMULA 3 -->
                <RadioButton Margin="5" Name="Radio3">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/formula3.png" Height="40" Margin="5"/>
                        <GroupBox Header="Параметры">
                            <WrapPanel HorizontalAlignment="Center" Margin="10,5">
                                <Label Content="a:" VerticalAlignment="Center"/>
                                <TextBox  MinWidth="50" Name="R3TextA" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="b:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  MinWidth="50" Name="R3TextB" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="c:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <ComboBox MinWidth="50" SelectedIndex="0" Name="R3ComboC">
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                </ComboBox>

                                <Label Content="d:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <ComboBox MinWidth="70" SelectedIndex="0" Name="R3ComboD">
                                    <ComboBoxItem Content="-1"/>
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                </ComboBox>
                            </WrapPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <!-- FORMULA 4 -->
                <RadioButton Margin="5" Name="Radio4">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/formula4.png" Height="45" Margin="5"/>
                        <GroupBox Header="Параметры">
                            <WrapPanel HorizontalAlignment="Center" Margin="10,5">
                                <Label Content="c:" VerticalAlignment="Center"/>
                                <ComboBox MinWidth="70" Name="R4ComboC" SelectedIndex="0">
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                </ComboBox>

                                <Label Content="d:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  Width="70" Name="R4TextD" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="a:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  Width="70" Name="R4TextA" PreviewTextInput="NumberOnlyInput"/>
                            </WrapPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>

                <!-- FORMULA 5 -->
                <RadioButton Margin="5" Name="Radio5">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/formula5.png" Height="45" Margin="5"/>
                        <GroupBox Header="Параметры">
                            <WrapPanel HorizontalAlignment="Center" Margin="10,5">
                                <Label Content="t:" VerticalAlignment="Center"/>
                                <TextBox  MinWidth="60" Name="R5TextT" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="x:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  MinWidth="60" Name="R5TextX" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="f:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  MinWidth="60" Name="R5TextF" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="y:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  MinWidth="60" Name="R5TextY" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="N:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  MinWidth="40" Name="R5TextN" PreviewTextInput="NumberOnlyInput"/>

                                <Label Content="K:" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                <TextBox  MinWidth="40" Name="R5TextK" PreviewTextInput="NumberOnlyInput"/>
                            </WrapPanel>
                        </GroupBox>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1" Background="#f3f3f3" Padding="10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Считать" Width="120" Height="35" Margin="0,0,10,0" Click="Calc_Click"/>
                    <Button Content="Переключить тему" Width="150" Height="35" Click="ChangeTheme_Click"/>
                </StackPanel>

                <TextBlock Name="ResultText"
                           Text="Результат появится здесь"
                           Margin="10"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="DarkBlue"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
